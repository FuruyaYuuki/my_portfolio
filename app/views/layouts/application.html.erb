<!DOCTYPE html>
<html>
  <head>
    <title>Opc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header>
      <div class="container">
        <ul class="header-list">
          <li class="header-item">
            <a href="/"><img src="/hakui.png" alt="画像がありません" style="width: 20px;" ></a>
          </li>
          <li class="header-item">
            <%= link_to search_form_path do %>
              <i class="fas fa-search" style="color: white"></i>
            <% end %>
          </li>
          <li class="header-item">
            <% if user_signed_in? %>
              <% if current_user.avatar.url %>
                <%= link_to image_tag(current_user.avatar.url), user_path(current_user.id) %>
              <% else %>
                <%= link_to image_tag("/no-profile.png"), user_path(current_user.id) %>
              <% end %>
            <% elsif admin_signed_in? %>
              <% if current_admin.avatar.url %>
                <%= link_to image_tag(current_admin.avatar.url), admin_path(current_admin.id) %>
              <% else %>
                <%= link_to image_tag("/no-profile.png"), admin_path(current_admin.id) %>
              <% end %>
            <% else %>
              <%= link_to "ログイン", new_user_session_path %>
              <%= link_to "管理者ログイン", new_admin_session_path %>
            <% end %>
          </li>
        </ul>
      </div>
    </header>
    
    <%= yield %>
  </body>
</html>
