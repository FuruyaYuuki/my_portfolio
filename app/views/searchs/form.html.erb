<div class="boxes">
  <div class="search-background">
    <h1 style="text-align: center; margin-bottom: 50px;">検索画面</h1>
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'text' %>
      <%= select_tag 'model', options_for_select({ "User" => "user", "Question" => "question" }) %>
      <%= submit_tag '検索' %>
    <% end %>
  </div>
</div>