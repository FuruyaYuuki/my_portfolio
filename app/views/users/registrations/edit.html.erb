<div class="container">
  <div class="boxes">
    <div class="user-background">
      <h2>プロフィール編集 </h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :nickname, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :プロフィール画像, style: "line-height: 20px" %>
          <%= f.file_field :avatar %>
        </div>
      
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="field">
          <%= f.label :パスワード, style: "line-height: 20px" %> <i>(変更したくない場合は空白のまま)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", style: "margin-bottom: 5px;" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 字以上</em>
          <% end %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "更新する" %>
        </div>
      <% end %>
      
      <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %>
    </div>
  </div>
</div>
